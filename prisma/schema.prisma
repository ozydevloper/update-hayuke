generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @unique @default(uuid())
  email         String   @unique
  name          String
  image         String
  role          Role     @default(USER)
  dibuatTanggal DateTime @default(now())
}

model Agenda {
  id            String       @unique @default(uuid())
  poster        String[]
  judul         String?
  deskripsi     String?
  tanggal       DateTime?
  waktu         String?
  pembicara     String[]
  penyelenggara String[]
  kategori      Kategori?    @relation(fields: [kategoriId], references: [id])
  kategoriId    String?
  topik         Topik?       @relation(fields: [topikId], references: [id])
  topikId       String?
  kota          Kota?        @relation(fields: [kotaId], references: [id])
  kotaId        String?
  kalangan      Kalangan?    @relation(fields: [kalanganId], references: [id])
  kalanganId    String?
  biaya         Biaya?       @relation(fields: [biayaId], references: [id])
  biayaId       String?
  pelaksanaan   Pelaksanaan? @relation(fields: [pelaksanaanId], references: [id])
  pelaksanaanId String?
  dibuatTanggal DateTime     @default(now())
}

model Kategori {
  id            String   @unique @default(uuid())
  name          String   @unique
  daftarAgenda  Agenda[]
  dibuatTanggal DateTime @default(now())
}

model Topik {
  id            String   @unique @default(uuid())
  name          String   @unique
  daftarAgenda  Agenda[]
  dibuatTanggal DateTime @default(now())
}

model Kota {
  id            String   @unique @default(uuid())
  name          String   @unique
  daftarAgenda  Agenda[]
  dibuatTanggal DateTime @default(now())
}

model Kalangan {
  id            String   @unique @default(uuid())
  name          String   @unique
  daftarAgenda  Agenda[]
  dibuatTanggal DateTime @default(now())
}

model Biaya {
  id            String   @unique @default(uuid())
  name          String   @unique
  daftarAgenda  Agenda[]
  dibuatTanggal DateTime @default(now())
}

model Pelaksanaan {
  id            String          @unique @default(uuid())
  method        MethodPelaksaan @default(OFFLINE)
  via           String?         @unique
  detailVia     String?
  urlVia        String?
  daftarAgenda  Agenda[]
  dibuatTanggal DateTime        @default(now())
}

enum MethodPelaksaan {
  ONLINE
  OFFLINE
}

enum Role {
  USER
  ADMIN
}
